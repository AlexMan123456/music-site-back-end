generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username    String  @id @db.VarChar(100)
  is_artist   Boolean
  global_name String  @db.VarChar(100)
  albums      Album[]
  songs       Song[]

  @@map("users")
}

model Song {
  song_id  Int    @id @default(autoincrement())
  title    String @db.VarChar(100)
  url      String
  album_id Int
  username String
  album    Album  @relation(fields: [album_id], references: [album_id])
  artist   User   @relation(fields: [username], references: [username])

  @@map("songs")
}

model Album {
  album_id        Int     @id @default(autoincrement())
  title           String  @db.VarChar(100)
  front_cover_url String
  back_cover_url  String?
  username        String
  artist          User    @relation(fields: [username], references: [username])
  songs           Song[]

  @@map("albums")
}
